@{
    ViewData["Title"] = "Would Donald Trump tweet this?";
}

<div class="row mt-5">
    <h1>Would Donald Trump tweet this?</h1>
</div>

<div class="row col col-lg-8 mx-auto">
    <div class="tweet">
        <div class="tweetname">
            <img src="https://pbs.twimg.com/profile_images/874276197357596672/kUuht00m_400x400.jpg" />
            <div class="nametag">
                <span class="name">Donald J. Trump</span>
                <svg viewBox="0 0 24 24" aria-label="Geverifieerd account" class="checkmark"><g><path d="M22.5 12.5c0-1.58-.875-2.95-2.148-3.6.154-.435.238-.905.238-1.4 0-2.21-1.71-3.998-3.818-3.998-.47 0-.92.084-1.336.25C14.818 2.415 13.51 1.5 12 1.5s-2.816.917-3.437 2.25c-.415-.165-.866-.25-1.336-.25-2.11 0-3.818 1.79-3.818 4 0 .494.083.964.237 1.4-1.272.65-2.147 2.018-2.147 3.6 0 1.495.782 2.798 1.942 3.486-.02.17-.032.34-.032.514 0 2.21 1.708 4 3.818 4 .47 0 .92-.086 1.335-.25.62 1.334 1.926 2.25 3.437 2.25 1.512 0 2.818-.916 3.437-2.25.415.163.865.248 1.336.248 2.11 0 3.818-1.79 3.818-4 0-.174-.012-.344-.033-.513 1.158-.687 1.943-1.99 1.943-3.484zm-6.616-3.334l-4.334 6.5c-.145.217-.382.334-.625.334-.143 0-.288-.04-.416-.126l-.115-.094-2.415-2.415c-.293-.293-.293-.768 0-1.06s.768-.294 1.06 0l1.77 1.767 3.825-5.74c.23-.345.696-.436 1.04-.207.346.23.44.696.21 1.04z"></path></g></svg>
                <span class="tag">@@realDonaldTrump</span>
            </div>
        </div>
        <textarea id="tweet" class="textarea" oninput='ML();this.style.height = "";this.style.height = this.scrollHeight + "px"' placeholder="Enter your tweet"></textarea>
        <p id="time">
        </p>
    </div>
</div>

<div class="row mt-5" id="result">
    <h4 class="mx-auto" id="resulttext">Trump would probably tweet this!</h4>
    <div class="bar" id="resultbar">
    </div>
</div>

<script>

    var timer = 0;

    function ML() {
        clearTimeout(timer);
        timer = setTimeout(Post, 350);
    };

    function Post() {

        document.getElementById("result").style.display = "hidden";

        clearTimeout(timer)

        fetch(window.location.href + "ml", {
            method: "post",
            headers: new Headers({ 'content-type': 'application/json' }),
            body: "{ \"TweetContent\": \"" + document.getElementById("tweet").value + "\" }"
        }).then(function (response) {
            return response.text().then(function (text) {
                var percentage = Math.round(text * 100);
                var wouldtrumptweetthis = ((percentage > 50) ? true : false);

                if (wouldtrumptweetthis) {

                    document.getElementById("resulttext").innerText = "Trump would tweet this.";

                }
                else {
                    document.getElementById("resulttext").innerText = "Trump would not tweet this.";
                }
                document.getElementById("resultbar").innerText = percentage + "%";
                document.getElementById("result").style.display = "block";
            });

            
        });
            
    }
    
</script>